<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView
            android:layout_width="193dp"
            android:layout_height="96dp"
            android:text="@string/Expenses"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="-200dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.149"
            app:layout_constraintHorizontal_bias="0.172"
            android:fontFamily="@font/roboto_mono_bold"
            android:textSize="36sp" android:textColor="#070707"
            android:id="@+id/expenses_title"/>


    <TextView
            android:layout_width="270dp"
            android:layout_height="96dp"
            android:text="Welcome Please Add an Expense"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="384dp"
            android:id="@+id/e_welcome_text"
            android:fontFamily="@font/robotomono"
            android:textColor="#070707" android:textSize="18sp"
            android:gravity="center" tools:ignore="HardcodedText"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/e_horizontal_line"
            tools:layout_editor_absoluteY="-42dp"
            tools:layout_editor_absoluteX="0dp">

        <TextView
                android:layout_width="200dp"
                android:layout_height="33dp"
                android:text="Add Name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="360dp"
                android:layout_marginStart="110dp"
                android:fontFamily="@font/roboto_mono"
                android:textColor="#B6ADAD"
                android:textSize="15sp"
                android:gravity="center"
                tools:ignore="HardcodedText"
                android:id="@+id/e_add_name"/>
        <View
                android:layout_width="265dp"
                android:layout_height="1dp"
                android:background="#070707"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="1dp"
                android:layout_marginStart="73dp"/>
        <View
                android:layout_width="265dp"
                android:layout_height="1dp"
                android:background="#070707"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="70dp"
                android:layout_marginStart="73dp"/>
        <TextView
                android:layout_width="200dp"
                android:layout_height="33dp"
                android:text="Add Amount"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="-35dp"
                android:layout_marginStart="110dp"
                android:fontFamily="@font/roboto_mono"
                android:textColor="#B6ADAD"
                android:textSize="15sp"
                android:gravity="center"
                tools:ignore="HardcodedText"
                android:id="@+id/e_add_amount"/>

        <View
                android:layout_width="265dp"
                android:layout_height="1dp"
                android:background="#070707"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="70dp"
                android:layout_marginStart="73dp"/>
        <TextView
                android:layout_width="200dp"
                android:layout_height="33dp"
                android:text="Add Date"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="-35dp"
                android:layout_marginStart="110dp"
                android:fontFamily="@font/roboto_mono"
                android:textColor="#B6ADAD"
                android:textSize="15sp"
                android:gravity="center"
                tools:ignore="HardcodedText"
                android:id="@+id/e_add_date"/>
        <ImageButton
                android:id="@+id/plus_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="59dp"
                android:layout_height="65dp"
                android:src="@drawable/plus_button_round"
                android:padding="12dp"
                android:layout_marginTop="1dp"
                android:scaleType="fitCenter"
                android:background="#0000ffff"
                app:layout_constraintHorizontal_bias="0.049"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="180dp"
                android:contentDescription="@string/left_arrow"/>
        <Button
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="1dp"
                android:layout_marginStart="65dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/e_go_to_view_button"
                android:text="@string/go_to_expenses_view"
                android:backgroundTint="#070707"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
