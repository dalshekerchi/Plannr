<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <TextView
            android:layout_width="193dp"
            android:layout_height="96dp"
            android:layout_marginTop="75dp"
            android:layout_marginStart="65dp"
            android:text="@string/expensess"
            android:textSize="36sp"
            android:textColor="#070707"
            android:id="@+id/expenses_title"
            android:fontFamily="@font/roboto_mono_bold"/>


    <TextView
            android:layout_width="270dp"
            android:layout_height="96dp"
            android:text="@string/welcome_please_add_your_monthly_income"
            android:layout_marginTop="75dp"
            android:layout_marginStart="65dp"
            android:layout_marginBottom="384dp"
            android:id="@+id/e_welcome_text"
            android:fontFamily="@font/robotomono"
            android:textColor="#070707"
            android:textSize="18sp"
            android:gravity="center"
    />


    <Button
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="65dp"
            android:id="@+id/e_go_to_view_button"
            android:text="@string/go_to_expenses_view"
            android:backgroundTint="#070707"/>
<TextView
            android:layout_width="200dp"
            android:layout_height="96dp"
            android:text="@string/add_amount"
            android:layout_marginTop="-700dp"
            android:layout_marginLeft="110dp"
            android:fontFamily="@font/roboto_mono"
            android:textColor="#B6ADAD"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/e_add_amount"/>

    </LinearLayout>