<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:layout_width="193dp"
            android:layout_height="96dp"
            android:text="@string/Expenses"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.149"
            app:layout_constraintHorizontal_bias="0.172"
            android:fontFamily="@font/roboto_mono_bold"
            android:textSize="36sp" android:textColor="#070707"
            android:id="@+id/expenses_title"/>


    <TextView
            android:layout_width="270dp"
            android:layout_height="96dp"
            android:text="Welcome Please Add Your Monthly Income"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="384dp" android:id="@+id/e_welcome_text"
            android:fontFamily="@font/roboto_mono" android:textColor="#070707" android:textSize="18sp"
            android:gravity="center" tools:ignore="HardcodedText"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/e_horizontal_line">

        <View
                android:layout_width="265dp"
                android:layout_height="1dp"
                android:background="#070707"
                android:layout_marginTop="390dp"
                android:layout_marginLeft="75dp"/>

        <Button
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="65dp"
                android:id="@+id/e_go_to_view_button"
                android:text="@string/go_to_expenses_view"
                android:backgroundTint="#070707"/>
        <TextView
                android:layout_width="200dp"
                android:layout_height="96dp"
                android:text="Add Amount"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="-335dp"
                android:layout_marginLeft="110dp"
                android:fontFamily="@font/roboto_mono"
                android:textColor="#B6ADAD"
                android:textSize="15sp"
                android:gravity="center"
                tools:ignore="HardcodedText"
                android:id="@+id/e_add_amount"/>





    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
