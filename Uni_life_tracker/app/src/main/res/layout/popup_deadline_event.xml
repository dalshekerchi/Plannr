<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded_edge_background"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp">

    <!--  Event Name  -->
    <TextView
            android:id="@+id/tv_event_name_pop_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/event"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_mono_bold"
            android:textStyle="bold"
            android:padding="10dp"/>

    <!--  Line Divider  -->
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lavender"
    />

    <!-- Event Date & Time -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">


        <ImageView android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/ic_time"
                   android:contentDescription="@string/select_date"/>

        <!-- Event Date -->
        <TextView
                android:id="@+id/tv_end_date_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/date"
                android:textSize="15sp"
                android:layout_marginStart="15dp"/>


        <!-- Event Start & End Time -->
        <TextView
                android:id="@+id/tv_end_time_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/end_time"
                android:textSize="15sp"
                android:textAlignment="textEnd"
                android:layout_marginStart="15dp"/>

    </LinearLayout>

    <!-- Event Priority -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

        <ImageView android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/ic_priority"
                   android:contentDescription="@string/priority"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/priority"
                android:textSize="15sp"
                android:layout_marginStart="15dp"/>

        <TextView
                android:id="@+id/tv_priority_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/priority"
                android:textSize="15sp"
                android:gravity="end"
                android:layout_marginStart="15dp"/>
    </LinearLayout>

    <!-- Select Course -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp">

        <ImageView android:layout_width="25dp"
                   android:layout_height="25dp"
                   android:src="@drawable/ic_school"
                   android:contentDescription="@string/course"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course"
                android:textSize="15sp"
                android:layout_marginStart="15dp"/>

        <TextView
                android:id="@+id/tv_course_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/course"
                android:textSize="15sp"
                android:gravity="end"
                android:layout_marginStart="15dp"/>
    </LinearLayout>

</LinearLayout>