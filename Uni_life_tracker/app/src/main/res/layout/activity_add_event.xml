<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AddEventActivity">

    <!--  Action Bar  -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center_vertical">

        <!--  Back Button  -->
        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clickBack"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="@string/back"/>

        <!--  Add Event Text  -->
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_school_event"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_mono_bold"
                android:layout_marginStart="15dp"
                android:gravity="start"/>

        <!--  Save Button  -->
        <ImageView
                android:id="@+id/iv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done"
                android:contentDescription="@string/save"
                android:onClick="clickSaveEvent"/>
    </LinearLayout>

    <!-- Event Type Selection -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="10dp">

        <!-- Assessment -->
        <TextView
                android:id="@+id/tv_assessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_assessment"
                android:text="@string/assessment"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_mono_bold"
                android:textAlignment="center"
                android:padding="15dp"
                android:onClick="clickAssessment"/>

        <!-- Deadline -->
        <TextView
                android:id="@+id/tv_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_deadline_line"
                android:text="@string/deadline"
                android:textAlignment="center"
                android:padding="15dp"
                android:onClick="clickDeadline"/>

        <!-- Class Time -->
        <TextView
                android:id="@+id/tv_class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_class_time_line"
                android:text="@string/class_time"
                android:textAlignment="center"
                android:padding="15dp"
                android:onClick="clickClassTime"/>

        <!-- Study Session -->
        <TextView
                android:id="@+id/tv_study_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_study_session_line"
                android:text="@string/study_session"
                android:textAlignment="center"
                android:padding="15dp"
                android:onClick="clickStudySession"/>
    </LinearLayout>

    <!-- Add Event Name -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp">

        <ImageView android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/ic_label"
                   android:contentDescription="@string/select_date"/>

        <EditText
                android:id="@+id/et_event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/event_name"
                android:autofillHints="@string/event_name"
                android:textSize="20sp"
                android:ems="10"
                android:layout_marginHorizontal="10dp"/>
    </LinearLayout>

    <!-- Add Event Date & Time -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp">

        <ImageView android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/ic_time"
                   android:contentDescription="@string/select_date"/>

        <!-- Event Start & End Date -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp">

            <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_start_date"
                    android:textSize="15sp"
                    android:layout_marginBottom="25dp"
                    android:onClick="clickStartDate"/>

            <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_end_date"
                    android:textSize="15sp"
                    android:onClick="clickEndDate"/>
        </LinearLayout>

        <!-- Event Start & End Time -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

            <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/start_time"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="25dp"
                    android:onClick="clickStartTime"/>

            <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/end_time"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:layout_marginEnd="15dp"
                    android:onClick="clickEndTime"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Add Event Priority -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp">

        <ImageView android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/ic_priority"
                   android:contentDescription="@string/priority"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/priority"
                android:textSize="15sp"
                android:layout_margin="15dp"/>

        <RadioGroup android:id="@+id/rg_priorities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="15dp">

            <RadioButton android:id="@+id/rb_high_priority"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/high_priority"
                         android:checked="true"/>

            <RadioButton android:id="@+id/rb_med_priority"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/med_priority"
                         android:layout_marginStart="10dp"/>

            <RadioButton android:id="@+id/rb_low_priority"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/low_priority"
                         android:layout_marginStart="10dp"/>
        </RadioGroup>
    </LinearLayout>

    <!-- Select Course -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp">

        <ImageView android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/ic_school"
                   android:contentDescription="@string/select_date"/>

        <EditText
                android:id="@+id/et_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/course"
                android:inputType="textCapCharacters"
                android:autofillHints="@string/course"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"/>

    </LinearLayout>

</LinearLayout>