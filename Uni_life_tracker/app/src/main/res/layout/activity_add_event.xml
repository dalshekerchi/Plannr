<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!--  Toolbar  -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="ClickBack"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="@string/back"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_school_event"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_mono_bold"
                android:layout_marginStart="15dp"
                android:gravity="start"/>

        <ImageView
                android:id="@+id/iv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="ClickSave"
                android:src="@drawable/ic_done"
                android:contentDescription="@string/save"/>
    </LinearLayout>

    <!-- Event Type Selection -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp">

        <!-- Assessment -->
        <TextView
                android:id="@+id/tv_assessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_assessment"
                android:text="@string/assessment"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_mono_bold"
                android:textAlignment="center"
                android:padding="15dp"/>

        <!-- Deadline -->
        <TextView
                android:id="@+id/tv_deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_deadline"
                android:text="@string/deadline"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_mono_bold"
                android:textAlignment="center"
                android:padding="15dp"/>

        <!-- Class Time -->
        <TextView
                android:id="@+id/tv_class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_class_time"
                android:text="@string/class_time"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_mono_bold"
                android:textAlignment="center"
                android:padding="15dp"/>

        <!-- Study Session -->
        <TextView
                android:id="@+id/tv_study_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableTopCompat="@drawable/ic_study_session"
                android:text="@string/study_session"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_mono_bold"
                android:textAlignment="center"
                android:padding="15dp"/>
    </LinearLayout>

    <!-- Add Event Title -->
    <EditText
            android:id="@+id/et_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/event_title"
            android:autofillHints="@string/event_title"
            android:fontFamily="@font/roboto_mono_light"
            android:textSize="20sp"
            android:ems="10"
            android:padding="15dp"/>

    <!-- Add Event Date & Time -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_time"
                   android:contentDescription="@string/select_date"/>

        <!-- Event Start Date & Time -->
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp">

            <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_start_date"
                    android:fontFamily="@font/roboto_mono_light"
                    android:textSize="15sp"
                    android:paddingBottom="15dp"/>

            <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/select_end_date"
                    android:fontFamily="@font/roboto_mono_light"
                    android:textSize="15sp"/>
        </LinearLayout>

        <!-- Event End Date & Time -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

            <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/start_time"
                    android:fontFamily="@font/roboto_mono_light"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:paddingEnd="15dp"
                    android:paddingBottom="15dp"
                    tools:ignore="RtlSymmetry"/>

            <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/end_time"
                    android:fontFamily="@font/roboto_mono_light"
                    android:textSize="15sp"
                    android:textAlignment="textEnd"
                    android:paddingEnd="15dp"
                    tools:ignore="RtlSymmetry"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Add Event Priority -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/ic_priority"
                   android:contentDescription="@string/priority"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/priority"
                android:fontFamily="@font/roboto_mono_light"
                android:textSize="15sp"
                android:padding="15dp"/>

        <RadioGroup android:id="@+id/rg_priorities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="15dp">

            <RadioButton android:id="@+id/high_priority"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/high_priority"
                         android:fontFamily="@font/roboto_mono_light"/>

            <RadioButton android:id="@+id/med_priority"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/med_priority"
                         android:fontFamily="@font/roboto_mono_light"
                         android:layout_marginStart="10dp"/>

            <RadioButton android:id="@+id/low_priority"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/low_priority"
                         android:fontFamily="@font/roboto_mono_light"
                         android:layout_marginStart="10dp"/>
        </RadioGroup>
    </LinearLayout>

    <!-- Select Course -->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp">

        <ImageView android:layout_width="24dp"
                   android:layout_height="24dp"
                   android:src="@drawable/ic_school"
                   android:contentDescription="@string/select_date"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/course"
                android:fontFamily="@font/roboto_mono_light"
                android:textSize="15sp"
                android:padding="15dp"/>

        <Spinner
                android:id="@+id/spn_courses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>